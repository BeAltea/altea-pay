# Payment Provider Configuration
# Options: "asaas" (default) or "custom"
PAYMENT_PROVIDER=asaas

# Custom Gateway Mode (only used when PAYMENT_PROVIDER=custom)
# Options: "test" (default) or "production" (blocked - will throw error)
CUSTOM_GATEWAY_MODE=test

# Asaas Configuration (required when PAYMENT_PROVIDER=asaas)
ASAAS_API_KEY=your_asaas_api_key_here
ASAAS_API_URL=https://api.asaas.com/v3

# Payment API Database (separate PostgreSQL for transaction logs)
PAYMENT_DB_HOST=localhost
PAYMENT_DB_PORT=5433
PAYMENT_DB_NAME=payment_api
PAYMENT_DB_USER=payment_api
PAYMENT_DB_PASSWORD=payment_api_secret

# Redis (for BullMQ queues)
PAYMENT_REDIS_HOST=localhost
PAYMENT_REDIS_PORT=6379
PAYMENT_REDIS_PASSWORD=

# Security
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
PAYMENT_ENCRYPTION_KEY=
PAYMENT_RATE_LIMIT_MAX=100
PAYMENT_RATE_LIMIT_WINDOW_MS=60000
